@echo off
echo ========================================
echo Removing node_modules from Git
echo ========================================
echo.

echo Step 1: Checking current branch...
git branch --show-current
echo.

echo Step 2: Removing node_modules from git tracking (keeping local copy)...
git rm -r --cached frontend/node_modules 2>nul
git rm -r --cached node_modules 2>nul
git rm -r --cached backend/node_modules 2>nul
echo.

echo Step 3: Checking status...
git status
echo.

echo Step 4: Ready to commit? (Press Ctrl+C to cancel)
pause

echo Step 5: Committing changes...
git add .gitignore
git commit -m "Remove node_modules from git tracking"
echo.

echo Step 6: Push to remote? (Press Ctrl+C to cancel)
pause

echo Pushing to origin...
git push origin jesslyn
echo.

echo ========================================
echo DONE!
echo ========================================
echo.
echo Next steps for your team:
echo 1. git pull
echo 2. Delete their local node_modules folders
echo 3. Run 'npm install' in frontend folder
echo.
pause
